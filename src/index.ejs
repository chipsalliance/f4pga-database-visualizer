<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title></title>
    <% for (var css in htmlWebpackPlugin.files.css) { 
        %><link href="<%= htmlWebpackPlugin.files.css[css] %>" rel="stylesheet"><%
    } %>
</head>
<body>
<div id="grid-view-app">
    <header id="header">
        <h1><a id="header-db-name"></a></h1>
        <div>
            <h1 id="toggleMinimap" class="buttonStyle">Toggle MiniMap</h1>
            <h1 id="toggleDetails" class="buttonStyle">Toggle Details</h1>
            <h1 id="databaseInfo" class="buttonStyle" title="">Database</h1>
        </div>
    </header>
    <div id="side-header">
        <h2>Details</h2>
    </div>
    <div id="side-panel">
        <div id="side-panel-tab-bar" class="mdc-tab-bar" role="tablist"><div class="mdc-tab-scroller">
            <div class="mdc-tab-scroller__scroll-area"><div class="mdc-tab-scroller__scroll-content">
                <button class="mdc-tab" role="tab" aria-selected="false" tabindex="1" aria-controls="side-panel-tile-tab">
                    <span class="mdc-tab__content">
                        <span class="mdc-tab__icon material-icons" aria-hidden="true">select_all</span>
                        <span class="mdc-tab__text-label">Tile</span>
                    </span>
                    <span class="mdc-tab-indicator">
                        <span class="mdc-tab-indicator__content mdc-tab-indicator__content--underline"></span>
                    </span>
                    <span class="mdc-tab__ripple"></span>
                </button>
                <button class="mdc-tab mdc-tab--active" role="tab" aria-selected="true" tabindex="0" aria-controls="side-panel-database-tab">
                    <span class="mdc-tab__content">
                        <span class="mdc-tab__icon material-icons" aria-hidden="true">storage</span>
                        <span class="mdc-tab__text-label">Database</span>
                    </span>
                    <span class="mdc-tab-indicator mdc-tab-indicator--active">
                        <span class="mdc-tab-indicator__content mdc-tab-indicator__content--underline"></span>
                    </span>
                    <span class="mdc-tab__ripple"></span>
                </button>
            </div></div>
        </div></div>
        <div class="side-panel-content tab-view">
            <div class="tab-view-page" id="side-panel-tile-tab" role="tabpanel">
                <div id="item-info" class="tab-view-page-content">
                    Select a tile to show details.
                </div>
            </div>
            <div class="tab-view-page" id="side-panel-database-tab" role="tabpanel">
                <div id="database-info" class="tab-view-page-content">
            </div>
        </div>
    </div>
    </div>
    <div id="grid-view">
        <div id="grid-view-grid"></div>
    </div>
</div>
<% for (var js in htmlWebpackPlugin.files.js) {
%><script src="<%= htmlWebpackPlugin.files.js[js] %>"></script><%
} %>
<script>
    let buttonToggleMinimap = document.getElementById('toggleMinimap');
    buttonToggleMinimap.addEventListener('click', function toggleminimap() {
        let map = document.querySelector(".minimap");
        if(map.style.display === 'block'){
            map.style.display = 'none';
        }
        else{
            map.style.display = 'block';
        }
    });

    let buttonToggleDetails = document.getElementById('toggleDetails');
    buttonToggleDetails.addEventListener('click', function toggledetails() {
        let mainDetails = document.getElementById("side-panel");
        if(mainDetails.style.display === 'flex'){
            mainDetails.style.display = 'none';
        }
        else{
            mainDetails.style.display = 'flex';
        }
    });
</script>
</body>
</html>
